NAME = school

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

